@model AlutaApp.DTO.UserRegistrationDto  
@{  
    ViewData["Title"] = "Add User";  
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";  
} 

 <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title">Add User</h4>
            </div>
                              
        </div> <!-- end row -->
    </div>
    <!-- end page-title -->

    <div class="row">
  
        <div class="col-sm-12 col-xl-12">
             @Html.ValidationSummary()  
  
 
                        <form asp-action="AddUser" asp-controller="Account" method="post">  
  
                            <div class="registerdiv">  
                                <div class="form-group col-sm-5">  
                                    <label asp-for="@Model.Name" class="col-lg-3 control-label"></label>  
                                    <br>  
                                    <div class="col-lg-9">  
                                        @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-control",  @required  = "required"})  
                                        @Html.ValidationMessageFor(m => m.Name)  
                                    </div>  
                                </div>  
  
  
                                <div class="form-group col-sm-5">  
                                    <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>  
                                    <br>  
                                    <div class="col-lg-9">  
                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" ,  @required  = "required" })  
                                        @Html.ValidationMessageFor(m => m.Email)  
                                    </div>  
                                </div>  
  
                                <div class="form-group col-sm-5">  
                                    <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>  
                                    <br>  
                                    <div class="col-lg-9">  
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control",  @required  = "required" })  
                                        @Html.ValidationMessageFor(m => m.PhoneNumber)  
                                    </div>  
                                </div>  

                                 <div class="form-group col-sm-5">  
                                    <label asp-for="@Model.Role" class="col-lg-3 control-label"></label>  
                                    <br>  
                                    <div class="col-lg-9">  
                                        @Html.DropDownList("Role", new List<SelectListItem>
                                        {
                                           new SelectListItem{ Text="Admin", Value = "Admin" },
                                           new SelectListItem{ Text="SuperAdmin", Value = "SuperAdmin" },
                      
                                        }, new { @class = "form-control input-group, dropdown-submenu", @required  = "required" })
                                        @Html.ValidationMessageFor(m => m.PhoneNumber)  
                                    </div>  
                                </div>  
  
  
                                <div class="form-group col-sm-5">  
                                    <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>  
                                    <br>  
                                    <div class="col-lg-9">  
                                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", @required  = "required" })  
                                        @Html.ValidationMessageFor(m => m.Password)  
                                    </div>  
                                </div>  
  
                                <div class="form-group col-sm-5">  
                                    <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>  
                                    <br>  
                                    <div class="col-lg-9">  
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" , @required  = "required"})  
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)  
                                    </div>  
                                </div>  
  
                                <div class="form-group pl-3">  
                                    <div class="form-group col-sm-12 btn-submit">  
                                        <button type="submit" class="btn btn-success">Sign Up</button>  
  
                                    </div>  
                                </div>  
                            </div>  
                        </form>  
        </div>
                               
    </div>