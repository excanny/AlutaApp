@model IEnumerable<ApplicationUser>
   
 @{  
    ViewData["Title"] = "All Users";  
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";  
} 


 <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title">All Users</h4>
            </div>
                              
        </div> <!-- end row -->
    </div>

   <a class="btn btn-success mb-2" href="../../Account/AddUser">Add User</a>
<br />
<table id="datatable" class="table table-theme table-row v-middle table-striped table-bordered" data-plugin="dataTable">
    <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th style="width:10%">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.UserName
                            </a>
                            <br>
                         
                        </div>
                    </div>
                </td>
                <td>
                    <a>
                        @user.Email
                    </a>
                </td>
                <td>
                   
                    <div class="btn-group">
                        <i class="fas fa-ellipsis-v text-center cursor" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                       
                        </i>
                   
                        <div class="dropdown-menu shadow animated--grow-in">
                           <a style='margin-right:16px' asp-action="ManageRoles" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fas fa-wrench text-warning"></i> Manage Roles
                            </a>
                             <a style='margin-right:16px' asp-action="ManagePermissions" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fas fa-wrench text-warning"></i> Manage Permissions
                            </a>
                                                        
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>