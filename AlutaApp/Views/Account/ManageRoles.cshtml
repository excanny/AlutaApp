@model AlutaApp.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml"; 
}

<div class="mt-5 mb-5">
    <form method="post" asp-action="ManageRoles" class="d-inline">
        <div class="">
            <h3 class="card-titlex">Manage Roles for User: <b>@Model.UserName</b></h3>
            <a asp-action="AllUsers" class="float-right">All Users</a>
        </div>
        <div class="card-bodyx">
            <input asp-for="@Model.UserId" type="hidden" />
            <input asp-for="@Model.UserName" type="hidden" />
            <table id="datatable" class="table table-theme table-row table-bordered table-striped v-middle" data-plugin="dataTable">
                <thead>
                    <tr>
                        <th>
                            Role
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.ManageRolesViewModel.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.ManageRolesViewModel[i].Name" type="hidden" />
                                @Model.ManageRolesViewModel[i].Name
                            </td>
                            <td>
                                <input asp-for="@Model.ManageRolesViewModel[i].Description" type="hidden" />
                                @Model.ManageRolesViewModel[i].Description
                            </td>
                            <td>

                                <div class="form-check m-1">
                                    <input asp-for="@Model.ManageRolesViewModel[i].Checked" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*<div class="card-footer clearfix">
            <div class="col-sm-12" style=" padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn bg-primary text-white">
                   
                    Update
                </button>
            </div>
        </div>*@
         <div class="form-group col-sm-12 btn-submit">  
            <button type="submit" class="btn btn-success">Update</button>  
  
        </div>  
    </form>
</div>
