@model AlutaApp.DTO.UserLoginDto  
@{  
    ViewData["Title"] = "Login";  
    //Layout = "~/Views/Shared/_LayoutSignIn.cshtml";   
}

<!doctype html>
<html lang="en">
   <head>
      <title>Login 02</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&amp;display=swap" rel="stylesheet">
      <link rel="stylesheet" href="stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="css/A.style.css.pagespeed.cf.Yzg85I7GdJ.css">
     
   </head>
   <body style="background: #448BFF;">
      <section class="ftco-section">
         <div class="container">
            <div class="row justify-content-center">
               <div class="col-md-6 text-center mb-5">
                  <h2 class="heading-section">Aluta</h2>
               </div>
            </div>
            <div class="row justify-content-center">
               <div class="col-md-6 col-lg-4">
                  <div class="login-wrap p-0">
                     <h3 class="mb-4 text-center">Sign In</h3>
                      @Html.ValidationSummary()  
                       <form asp-action="Login" class="signin-form" asp-controller="ApplicationRole" method="post">
                    
                        <div class="form-group">
                           @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control pl-2" })  
                           @Html.ValidationMessageFor(m => m.Email)  
                        </div>
                        <div class="form-group">
                           @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control pl-2" })  
                           @Html.ValidationMessageFor(m => m.Password)  
                        </div>
                        <div class="form-group">
                           <button type="submit" class="form-control btn rounded submit px-3" style="background: blue">Sign In</button>
                        </div>
                        <div class="form-group d-md-flex">
                           <div class="w-50">
                              <label class="checkbox-wrap checkbox-primary">Remember Me
                              <input type="checkbox" checked>
                              <span class="checkmark"></span>
                              </label>
                           </div>
                           <div class="w-50 text-md-right">
                              <a href="#" style="color: #fff">Forgot Password</a>
                           </div>
                        </div>
                     </form>
                    
                  </div>
               </div>
            </div>
         </div>
      </section>
      <script src="js/jquery.min.js"></script>
  
