@model AlutaApp.Helpers.PaginatedList<AlutaApp.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "View Roles";
   Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


        <h3 class="card-title">Roles</h3>

        <a asp-action="Add" class="btn btn-success mb-3">Add New </a>
   

        <table id="datatable" class="table table-theme table-row v-middle table-striped table-bordered" data-plugin="dataTable">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a class="text-primary" asp-action="ManageRolePermissions" asp-route-roleId="@item.Id">Manage Permissions</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


