                                            </td>
                                            <td >
                                                <small class="text-muted">@item.Female</small>
                                            </td>
                                             
                                            <td >
                    @if (@item.MaleStatus == 0)
                    {
                        <small class="badge badge-danger text-uppercase"
>DECLINED</small>
                    }
                    
                    else if (@item.MaleStatus == 2)
                    {
                        <small class="badge badge-success text-uppercase"
>ACCEPTED</small>
                    }
                    else
                    {
                        <small class="badge badge-secondary text-uppercase"
>NO ACTION</small>
                    }
                </td>


                                            <td>
                                                @if (@item.FemaleStatus == 0)
                    {
                        <small class="badge badge-danger text-uppercase"
>DECLINED</small>
                    }
                    
                    else if (@item.FemaleStatus == 2)
                    {
                        <small class="badge badge-success text-uppercase"
>ACCEPTED</small>
                    }
                    else
                    {
                        <small class="badge badge-secondary text-uppercase"
>NO ACTION</small>
                    }
                                            </td>

