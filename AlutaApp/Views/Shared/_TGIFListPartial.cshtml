

@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<AlutaApp.Models.TGIFMatch>
<table id="datatable" class="table table-theme table-row v-middle" data-plugin="dataTable">
                                    <thead>
                                        <tr>
                                            <th><span class="text-muted">Male</span></th>
                                            <th><span class="text-muted">Female</span></th>
                                            <th><span class="text-muted">Male Status</span></th>
                                            <th><span class="text-muted">Female Status</span></th>
                                            <th><span class="text-muted">Date Matched</span></th>
                                            <th><span class="text-muted">Expiry Date</span></th>
                                            
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) {

                                        <tr class="" data-id="16">
                                            <td >
                                                <small class="text-muted">@item.Male.FullName</small>
                                            </td>
                                            <td >
                                                <small class="text-muted">@item.Female</small>
                                            </td>
                                             
                                            <td >
                    @if (@item.MaleStatus == 0)
                    {
                        <small class="badge badge-danger text-uppercase"
>DECLINED</small>
                    }
                    
                    else if (@item.MaleStatus == 2)
                    {
                        <small class="badge badge-success text-uppercase"
>ACCEPTED</small>
                    }
                    else
                    {
                        <small class="badge badge-secondary text-uppercase"
>NO ACTION</small>
                    }
                </td>


                                            <td>
                                                @if (@item.FemaleStatus == 0)
                    {
                        <small class="badge badge-danger text-uppercase"
>DECLINED</small>
                    }
                    
                    else if (@item.FemaleStatus == 2)
                    {
                        <small class="badge badge-success text-uppercase"
>ACCEPTED</small>
                    }
                    else
                    {
                        <small class="badge badge-secondary text-uppercase"
>NO ACTION</small>
                    }
                                            </td>

                                            <td >
                                                <small class="text-muted">@item.DateMatched</small>
                                            </td>

                                            <td >
                                                <small class="text-muted">@item.DateOfExpiry</small>
                                            </td>
                                            <td>
                                                <div class="item-action dropdown">
                                                    <a href="#" data-toggle="dropdown" class="text-muted">
                                                        <i data-feather="more-vertical"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right bg-black" role="menu">
                                                        <a class="dropdown-item" href="../../TGIFMatches/Details/@item.Id" id="viewInstitution">
                                                            View
                                                        </a>
                                                        <a class="dropdown-item edit" href="../../TGIFMatches/Edit/@item.Id" id="editInstitution">
                                                            Update
                                                        </a>
                                                       
                                                        <a class="dropdown-item edit" href="../../TGIFMatches/Delete/@item.Id" id="editInstitution">
                                                            Delete  
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                   }
                                    </tbody>

                                </table>
                                <div>
                                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("TGIFs", new { page = page }),
            new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item"},
                        PageClasses = new string[] {"page-link"}
                    } )
                    
               
                                </div>


                              