
@model IEnumerable<AlutaApp.Models.TGIFMatch>
<table id="datatable" class="table table-bordered table-striped table-row v-middle" data-plugin="dataTable">
                                    <thead>
                                        <tr>
                                            <th><span class="text-muted">Male Match</span></th>
                                            <th><span class="text-muted">Female Match</span></th>
                                            <th><span class="text-muted">Male Status</span></th>
                                            <th><span class="text-muted">Female Status</span></th>
