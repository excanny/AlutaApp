

@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<AlutaApp.Models.Comment>
<table id="datatable" class="table table-theme table-row v-middle" data-plugin="dataTable">
                                    <thead>
                                        <tr>
                                            <th><span class="text-muted">Content</span></th>
                                            <th><span class="text-muted">Posted By</span></th>
                                            <th><span class="text-muted">Time Created</span></th>
                                            <th><span class="text-muted">Likes</span></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="search-results">
                                        @foreach (var item in Model) {

                                        <tr class="" data-id="16">
                                            <td >
                                                <small class="text-muted">@item.Content</small>
                                            </td>
                                            
                                            
                                             <td >
                                                <small class="text-muted">@item.User.FullName</small>
                                            </td>

                                             <td >
                                                <small class="text-muted">@item.TimeCreated</small>
                                            </td>

                                             <td >
                                                <small class="text-muted">@item.CommentLikes.Count</small>
                                            </td>
                                            
                                             <td >
                                                <a href="../../Administrators/DeleteComment/@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                   }
                                    </tbody>

                                </table>
                                <div id="pager">
                                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewPost","Administrators", new { page = page }),
            new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item"},
                        PageClasses = new string[] {"page-link"}
                    } )
                    
               
                                </div>


                              