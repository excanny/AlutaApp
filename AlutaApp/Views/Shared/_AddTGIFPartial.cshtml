@model AlutaApp.Models.TGIFMatch
<div class="search-bar">
    @using (Html.BeginForm("TGIFs", "TGIFMatches"))
    {

        <div class="input-group mb-6">
        <div class="form-group">
                <label asp-for="MaleId" class="control-label"></label>
                <select asp-for="MaleId" class ="form-control" asp-items="ViewBag.MaleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FemaleId" class="control-label"></label>
                <select asp-for="FemaleId" class ="form-control" asp-items="ViewBag.FemaleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaleStatus" class="control-label"></label>
                <input asp-for="MaleStatus" class="form-control" />
                <span asp-validation-for="MaleStatus" class="text-danger"></span>
            </div>
            </div>
            <div class="input-group mb-6">
            <div class="form-group">
                <label asp-for="FemaleStatus" class="control-label"></label>
                <input asp-for="FemaleStatus" class="form-control" />
                <span asp-validation-for="FemaleStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateMatched" class="control-label"></label>
                <input asp-for="DateMatched" class="form-control" />
                <span asp-validation-for="DateMatched" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfExpiry" class="control-label"></label>
                <input asp-for="DateOfExpiry" class="form-control" />
                <span asp-validation-for="DateOfExpiry" class="text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Add" id="search"/>
            </div>
      }

