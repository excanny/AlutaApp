@model IEnumerable<AlutaApp.Models.DocumentComment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
             <h3> Document Comments</h3>
        </div>

        <div class="card-body">
            
            <table id="datatable" class="table table-theme table-row v-middle table-striped table-bordered" data-plugin="dataTable">
            <thead>
                <tr>
                    <th>
                       FullName
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        TimeCreated
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @item.User.FullName
                    </td>
                    <td>
                        @item.Content
                    </td>
                    <td>
                        @item.TimeCreated
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
        </div>
        
    </div>                               
</div>
